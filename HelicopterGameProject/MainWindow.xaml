            <StackPanel HorizontalAlignment="Left" Height="100" Margin="-339,-55,0,0" VerticalAlignment="Top" Width="100"/>
            <Button x:Name="btnHelicopter" HorizontalAlignment="Left" VerticalAlignment="Top" Width="112" Height="63" RenderTransformOrigin="-0.756,0.67" Canvas.Left="30" Canvas.Top="185">
                <Button.Background>
                    <ImageBrush ImageSource="C:\Users\Dipak Mukesh\OneDrive - Sparta Global Limited\Engineering40\SpartaProject\HelicopterGameProject\HelicopterGameProject\Resources\Helicopter.png"/>
                </Button.Background>
            </Button>
            <Rectangle x:Name="Pillar1" Fill="#FF38DA17" HorizontalAlignment="Left" Height="100" Stroke="White" VerticalAlignment="Top" Width="50" Canvas.Left="513" Canvas.Top="34"/>
            <Rectangle x:Name="Pillar2" Fill="#FF38DA17" HorizontalAlignment="Left" Height="100" Stroke="White" VerticalAlignment="Top" Width="50" RenderTransformOrigin="1.128,0.518" Canvas.Left="672" Canvas.Top="273"/>
            <Rectangle x:Name="Pillar3" Fill="#FF38DA17" HorizontalAlignment="Left" Height="100" Stroke="White" VerticalAlignment="Top" Width="50" Canvas.Left="333" Canvas.Top="148"/>
            <Image x:Name="image1" Height="100" Canvas.Left="534" Canvas.Top="127" Width="100"/>
